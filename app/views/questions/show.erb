<%= erb :'/_errors', locals: {errors: @errors}, layout: false %>

<%= erb :'questions/_show_info', locals: {question: @question}, layout: false %>

<!-- comments on question -->
<h3>Question Comments</h3>
<ul>
  <% @question.comments.each do |comment| %>
    <li><%= comment.text  %></li>
    <span class="badge badge-pill badge-info">Votes <%= comment.total_votes %></span>
    <%= erb :'/votes/_question_comments', locals: { question: @question, comment: comment }, layout: false %>
  <% end %>
</ul>


<h3>Answers</h3>
<ul id="answers-list">
  <% @question.answers.each do |answer| %>
    <%= erb :'questions/_answers', locals: {question: @question, answer: answer} %>
</ul>



<!-- post comments on  answers -->
  <% if logged_in? %>
    <form method="post" action="/questions/<%= @question.id %>/answers/<%= answer.id %>/comments">
      <textarea name="text" cols="50" rows="5" placeholder="Enter your comment on the answer..."></textarea>
      <input type="submit" value="comment on answer">
    </form><br>
  <% end %>

<% end %>








