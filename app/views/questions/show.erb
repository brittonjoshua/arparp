
<h1>Title: <%= @question.title %></h1>
<h3>Question: <%= @question.text %>
<h4>Asked by: <%= @question.creator.name %></h4>

 <% if logged_in? %>
  <form action="/questions/<%= @question.id %>/votes" method="post">
    <input type="submit" name="upvote" value="upvote">
  </form>

  <form action="/questions/<%= @question.id %>/votes" method="post">
    <input type="submit" name="downvote" value="downvote">
</form>
<% end %>



<!-- votes for answers -->
<% if logged_in? && @answer %>
  <form action="/answers/<%= @answer.id %>/votes" method="post">
    <input type="submit" name="upvote" value="upvote">
  </form>

  <form action="/answers/<%= @answer.id %>/votes" method="post">
    <input type="submit" name="upvote" value="upvote">
  </form>
<% end %>




<ul>
<% @question.answers.each do |answer| %>
  <%= erb :'questions/_answers', locals: {question: @question, answer: answer} %>
<% end %>
</ul>

<form id="add-answer-form" action="/answers" method="post">
 <input type="hidden" name="question_id" value="<%= @question.id %>">
  <textarea name="text" cols="50" rows="5" placeholder=" Enter your Answer..."></textarea>
  <input type="submit" value="answer">
</form>
